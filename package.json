{
  "name": "clean-arch-node-api",
  "version": "1.0.0",
  "description": "Node Api to practice clean archtecture concepts",
  "main": "src/main/index.js",
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --passWithNoTests --findRelatedTests --noStackTrace",
    "test:unit": "jest --watchAll --silent --noStackTrace -c jest-unit-config.js",
    "test:integration": "jest --watchAll --silent --noStackTrace -c jest-integration-config.js",
    "test:ci": "jest --coverage --silent --noStackTrace",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "npm run lint -- --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint",
      "npm test"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CCnova/Clean-Arch-Node-API.git"
  },
  "author": "Caio Nova",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CCnova/Clean-Arch-Node-API/issues"
  },
  "homepage": "https://github.com/CCnova/Clean-Arch-Node-API#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.5",
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1",
    "standard": "^16.0.3",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "typescript": "^4.3.2"
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.8",
    "mongoose": "^5.12.13",
    "validator": "^13.6.0"
  }
}
